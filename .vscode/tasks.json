{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Module",
      "type": "shell",
      "command": "cmake --build . --target clean",
      "options": {
        "cwd": "${workspaceFolder}/test/build"
      },
      "problemMatcher": []
    },
    {
      "label": "Build module and run unit tests",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build Module",
        "Run unit tests"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "close": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build module and run unit tests under valgrind",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build Module",
        "Run unit tests under valgrind"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "close": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Module",
      "type": "shell",
      "command": "cmake ../.. -DCMAKE_BUILD_TYPE=Debug; cmake --build .",
      "options": {
        "cwd": "${workspaceFolder}/test/build"
      },
      "dependsOn": [
        "Create build folder"
      ],
      "problemMatcher": "$gcc",
      "presentation": {
        "reveal": "always",
        "revealProblems": "onProblem",
        "focus": false,
        "echo": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Run unit tests",
      "dependsOn": [
        "Build Module"
      ],
      "type": "shell",
      "linux": {
        "command": "./test/UnitTestExecutable",
        "options": {
          "cwd": "${workspaceFolder}/test/build"
        }
      },
      "osx": {
        "command": "./test/UnitTestExecutable",
        "options": {
          "cwd": "${workspaceFolder}/test/build"
        }
      },
      "windows": {
        "command": "./test/UnitTestExecutable.exe",
        "options": {
          "cwd": "${workspaceFolder}/test/build"
        }
      },
      "presentation": {
        "reveal": "always",
        "revealProblems": "onProblem",
        "focus": false,
        "echo": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Run unit tests under valgrind",
      "dependsOn": [
        "Build Module"
      ],
      "type": "shell",
      "linux": {
        "command": "valgrind --suppressions=../gtest.supp --leak-check=full --track-origins=yes ./test/UnitTestExecutable",
        "options": {
          "cwd": "${workspaceFolder}/test/build"
        }
      },
      "windows": {
        "command": "valgrind --suppressions=../gtest.supp --leak-check=full --track-origins=yes ./test/UnitTestExecutable.exe",
        "options": {
          "cwd": "${workspaceFolder}/test/build"
        }
      },
      "presentation": {
        "reveal": "always",
        "revealProblems": "onProblem",
        "focus": false,
        "echo": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Create build folder",
      "type": "shell",
      "linux": {
        "command": "mkdir -p build",
        "options": {
          "cwd": "${workspaceFolder}/test"
        }
      },
      "osx": {
        "command": "mkdir -p build",
        "options": {
          "cwd": "${workspaceFolder}/test"
        }
      },
      "windows": {
        "command": "cmd",
        "args": [
          "/C",
          "if not exist \\build mkdir build"
        ],
        "options": {
          "cwd": "${workspaceFolder}/test"
        }
      },
      "presentation": {
        "reveal": "never",
        "close": true
      }
    }
  ]
}